        {% include 'header.html' %}

          <article>
            <header>
              {% include 'top-call-to-action.html' %}
              <a href="./" rel="home" class="return">Nightlife</a>

              <h1>{{ name }}</h1>
            </header>

            {% if image %}

            <img src="{{ image }}" />

            {% endif %}

            <section id="location">
              {{ location.name }}
            </section>

            <section id="description">{% autoescape false %}
              {{ description }}
            {% endautoescape %}
            </section>

            {% if links %}
            <h2>Links</h2>
            <ul id="links">
            {% for link in links %}
              {% if link.gb_url|slice(0, 4) == 'http' or link.gb_url|slice(0, 1) == '/' %}
              <li><a href="{{ link.gb_url }}">{{ link.title }}</a></li>
              {% endif %}
            {% endfor %}
            </ul>
            {% endif %}

