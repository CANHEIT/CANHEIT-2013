        <script>   
        function stickyTitles(stickies) {
        
            this.load = function() {
        
                stickies.each(function(){
        
                    var thisSticky = jQuery(this);
                    if(false == thisSticky.parent().is('div.followWrap')) {
                      thisSticky.wrap('<div class="followWrap" />');
                    }
                    thisSticky.parent().height(thisSticky.outerHeight());
                    thisSticky.parent().css('margin-top', thisSticky.css('margin-top'));
                    thisSticky.parent().css('margin-bottom', thisSticky.css('margin-bottom'));
        
                    jQuery.data(thisSticky[0], 'pos', thisSticky.offset().top);
        
                });
            }
        
            this.scroll = function() {
        
                stickies.each(function(i){
        
        
                    var thisSticky = jQuery(this),
                        nextSticky = stickies.eq(i+1),
                        prevSticky = stickies.eq(i-1),
                        pos = jQuery.data(thisSticky[0], 'pos');
        
                    if (pos <= jQuery(window).scrollTop()) {
        
                        thisSticky.addClass("fixed");
        
                        if (nextSticky.length > 0 && thisSticky.offset().top >= jQuery.data(nextSticky[0], 'pos') - thisSticky.outerHeight() - parseInt(thisSticky.css('margin-top'))) {
        
                            thisSticky.addClass("absolute").css("top", jQuery.data(nextSticky[0], 'pos') - thisSticky.outerHeight() - parseInt(thisSticky.css('margin-top')));
        
                        }
        
                    } else {
        
                        thisSticky.removeClass("fixed");
        
                        if (prevSticky.length > 0 && jQuery(window).scrollTop() <= jQuery.data(thisSticky[0], 'pos')  - prevSticky.outerHeight() - parseInt(prevSticky.css('margin-top'))) {
        
                            prevSticky.removeClass("absolute").removeAttr("style");
        
                        }
        
                    }
                });         
            }
        }
        
        jQuery(document).ready(function(){
        
            var newStickies = new stickyTitles(jQuery(".time > h3"));
        
            newStickies.load();
        
            jQuery(window).on("scroll", function() {
        
                newStickies.scroll();
        
            });
            jQuery(window).on("resize", function() {
    
                newStickies.load();
                newStickies.scroll();
    
            });
        });
        </script>
        

